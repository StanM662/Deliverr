<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Class="Deliverr.BestellingPagina"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Deliverr.ViewModels">

    <!-- BindingContext niet meer hier instellen -->

    <CollectionView ItemsSource="{Binding Bestellingen}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <VerticalStackLayout>
                    <Label Text="{Binding ProductNaam}" FontAttributes="Bold" />
                    <Label Text="{Binding Aantal}" />
                    <Label Text="{Binding Datum}" />
                </VerticalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
