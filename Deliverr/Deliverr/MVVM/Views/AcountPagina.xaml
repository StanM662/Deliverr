<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Deliverr.AccountPagina"
             Title="Account">

    <VerticalStackLayout>
        <VerticalStackLayout HorizontalOptions="Center" Padding="25">
            <Image Source="{Binding ProfilePicture.Source}" HeightRequest="150" Aspect="AspectFit" />
            <Label Text="{Binding Name, StringFormat='Welkom {0}!'}" FontSize="36" />
            <Label Text="{Binding Details}" FontSize="24"/>
            <Label Text="{Binding Email}" FontSize="18"/>

        </VerticalStackLayout>



    </VerticalStackLayout>
</ContentPage>