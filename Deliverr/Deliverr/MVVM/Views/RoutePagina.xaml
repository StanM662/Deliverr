<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Deliverr.RoutePagina"
    Title="Upload picture of delivery">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Button 
            Text="take picture "
            Clicked="OnMaakFotoClicked"/>
        
        <Image x:Name="Made_Picture" HeightRequest="250" Margin="0,20,0,0"/>
        
        <WebView x:Name="KaartView" HeightRequest="250" Margin="0,20,0,0"/>

    </VerticalStackLayout>
</ContentPage>
