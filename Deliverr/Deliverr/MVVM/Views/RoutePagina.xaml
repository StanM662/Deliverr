<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Deliverr.RoutePagina"
             Title="Route">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Starting address" />
            <Entry x:Name="StartEntry" Placeholder="Bijv. Nieuw Eyckholt 300, 6419 DJ Heerlen" />

            <Label Text="Destination address" />
            <Entry x:Name="EndEntry" Placeholder="Bijv. Kerkstraat 10, 1234 AB Maastricht" />

            <Button Text="Calculate Route" Clicked="OnToonRouteClicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
