<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Deliverr.RoutePagina"
             Title="Route">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Route" FontAttributes="Bold" FontSize="24" HorizontalOptions="Center" />

            <Label Text="Start (lat, lon)" />
            <Entry x:Name="StartEntry" Placeholder="e.g. 50.891010, 5.739933" />

            <Label Text="Destination (lat, lon)" />
            <Entry x:Name="EndEntry" Placeholder="e.g. 50.881990, 5.959734" />

            <Button Text="Toon Route" Clicked="OnToonRouteClicked" />

            <WebView x:Name="KaartView" HeightRequest="400" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
